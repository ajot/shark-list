# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Database Configuration
# For local development
DEV_DATABASE_URL=postgresql://user:password@localhost:5432/twitter_list_dev

# For production (DigitalOcean will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/dbname

# Twitter API Credentials
# Get these from https://developer.twitter.com/
API_KEY=your-twitter-api-key
API_SECRET=your-twitter-api-secret
ACCESS_TOKEN=your-twitter-access-token
ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Twitter List ID
# The ID of the Twitter list you want to manage
LIST_ID=your-twitter-list-id

# Sync Settings
# Minimum minutes between Twitter list syncs (default: 5)
SYNC_COOLOFF_MINUTES=5

# Optional: Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
LOG_LEVEL=info
